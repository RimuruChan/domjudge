{% extends 'team/base.html.twig' %}

{% block title %}发送解释请求 - {{ parent() }}{% endblock %}

{% block content %}
    <div class="mt-3 container">
        <div class="card card-body clarificationform">
            <h1 class="text-center">发送解释请求</h1>

            {{ form_start(form) }}
            {{ form_row(form.recipient) }}
            {{ form_row(form.subject) }}
            {{ form_row(form.message) }}
            <div class="mb-3">
                <div class="card">
                    <div class="card-body">
                        <label class="rendered-preview-badge">渲染预览</label>
                        <div id="messagepreview">开始输入以查看消息预览</div>
                    </div>
                </div>
            </div>
            <div>
                <button type="submit" name="submit" class="btn btn-primary">
                    <i class="fas fa-envelope"></i> 发送
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block extrafooter %}
    <script>
        setupPreviewClarification($('#team_clarification_message') , $('#messagepreview'), true);
    </script>
{% endblock %}
